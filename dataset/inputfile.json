{
	"name": "inputfile",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureBlobStorage1",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"customer_name": {
				"type": "String",
				"defaultValue": "mycustomer"
			},
			"jobname": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"folderPath": {
					"value": "@replace(dataset().jobname, '.csv', '')\n",
					"type": "Expression"
				},
				"container": {
					"value": "@dataset().customer_name",
					"type": "Expression"
				}
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": []
	}
}